{   
    "version": "0.1.0",
    "configurations": [
      {
        "name": "Python Debugger: Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "env": {
          "PYDEVD_UNBLOCK_THREADS_TIMEOUT": "0",
          "PYDEVD_WARN_EVALUATION_TIMEOUT": "30",
          "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "15"},
        "args": [],
      },

    ]
  }